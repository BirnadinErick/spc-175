---
import CommonHead from "@components/common/CommonHead.astro";
import CommonHeader from "@components/common/CommonHeader.astro";
import Footer from "@components/footer/Footer.astro";
import PatricianToday from "@components/home/PatricianToday.astro";
import Next from "@components/common/Next.astro";
import PageTitle from "@components/common/PageTitle.astro";
import BackButton from "@components/patrician-publications/BackButton.astro";

import "@fontsource/space-grotesk/400.css";

const nexts = [
  ["Patrician Publications.", "/patrician-publications"],
  ["Our Spirituality.", "/our-spirituality"],
  ["Academics.", "/academics"],
  ["Sports.", "/sports"],
  ["Socities.", "socities"],
];
---

<html lang="en">
  <CommonHead title="Join Us | St. Patrick's College | SPC Media Unit" />

  <body class="cursor-default bg-spc-dark text-spc-light font-sans">
    <style>
      label {
        @apply block;
      }

      input {
        @apply text-black;
      }

      .form-border {
        @apply text-black bg-transparent;
      }

      .input-group {
        @apply my-2;
      }

      .sector {
        @apply lg:flex lg:justify-start lg:space-x-4 lg:items-baseline;
      }
    </style>

    <CommonHeader now="donate" title="Join the<br/> Digital Experience" />

    <PageTitle title="Join Us!" />

    <section class="px-6 md:hidden"><BackButton /></section>

    <section class="px-6 md:px-12 lg:px-24 xl:px-96">
      <form class="relative" action="/api/signup" method="post">
        <div class="sector">
          <div class="input-group">
            <label for="first-name">First Name</label>
            <input
              class="form-border"
              type="text"
              id="first-name"
              name="first-name"
              autocomplete="given-name"
              autofocus
              required
            />
          </div>

          <div class="input-group">
            <label for="last-name">Last Name</label>
            <input
              class="form-border"
              type="text"
              id="last-name"
              name="last-name"
              autocomplete="family-name"
              required
            />
          </div>
        </div>

        <div class="sector">
          <div class="input-group">
            <label for="email">Email Address</label>
            <input
              class="form-border"
              type="email"
              id="email"
              name="email"
              autocomplete="email"
              required
            />
          </div>

          <div class="input-group">
            <label for="password">Password</label>
            <input
              class="form-border"
              type="password"
              id="password"
              name="password"
              autocomplete="new-password"
              required
            />
          </div>
        </div>

        <div class="input-group">
          <label for="batch-year">Year of the Batch</label>
          <input
            class="form-border"
            type="number"
            id="batch-year"
            name="batch-year"
            min="1900"
            max="2099"
            required
          />
        </div>

        <div class="sector">
          <div class="input-group">
            <label for="address-line1">Address Line 1</label>
            <input
              class="form-border"
              type="text"
              id="address-line1"
              name="address-line1"
              autocomplete="address-line1"
            />
          </div>

          <div class="input-group">
            <label for="address-line2">Address Line 2</label>
            <input
              class="form-border"
              type="text"
              id="address-line2"
              name="address-line2"
              autocomplete="address-line2"
            />
          </div>

          <div class="input-group">
            <label for="country">Country of Current Residence</label>
            <input
              class="form-border"
              type="text"
              id="country"
              name="country"
              autocomplete="country"
              required
            />
          </div>
        </div>

        <div class="mt-4 space-x-4 absolute right-0">
          <button
            class="p-2 text-spc-gold hover:underline hover:underline-offset-2"
            type="reset">Reset</button
          >
          <button
            class="bg-white text-spc-green font-bold px-6 py-2"
            type="submit">Join Us</button
          >
        </div>
      </form>
    </section>
    <PatricianToday />
    <Next nexts={nexts} />
    <Footer />
  </body>
</html>
