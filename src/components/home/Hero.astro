import PrimaryCTA from "../common/PrimaryCTA.astro";
import SecondaryCTA from "../common/SecondaryCTA.astro";
---

<section
  class="font-serif font-bold leading-none text-spc-light/80 bg-spc-dark px-12 mb-12"
>
  <h2 class="text-4xl">celebrating</h2>
  <h1 class="font-mono text-[128px] text-spc-gold font-bold">175</h1>
  <h2 class="text-4xl">
